pipeline {
    agent any

    stages {
        def app

        stage('Clone repository') {
        /* Let's make sure we have the repository cloned to our workspace */
        checkout scm
        }   
        stage('Build') {
            steps {
                echo 'Building..'
                app = docker.build("Architech-Industries/Console-V0")
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                app.inside {
                    sh 'echo "Tests passed"'
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
            docker.withRegistry('https://registery.hub.docker.com', 'docker-hub-credentials') {
            app.push("${env.BUILD_NUMBER}")
            app.push("latest")

            }
        }
    }
}